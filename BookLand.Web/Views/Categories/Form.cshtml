@model CategoryFromViewModel

@{
    ViewData["Title"] = $"{(Model?.Id > 0 ? "Edit" : "Add")} Category";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">@(Model?.Id > 0 ? "Edit" : "Add") Category</h3>
        <div class="card-toolbar">
        </div>
    </div>
    <div class="card-body">
        <form method="post" asp-controller="Categories">
            <!--begin::Input group-->
            <div class="form-floating mb-7">
                @if (Model?.Id > 0)
                {
                    <input type="hidden" asp-for="Id" />
                }
                <input asp-for="Name" class="form-control" placeholder="Category Name" />
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <!--end::Input group-->
            <button type="submit" class="btn btn-sm btn-primary btn-sm">
                <i class="bi bi-check-circle"></i>
                Save
            </button>
        </form>
    </div>
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial">
}
